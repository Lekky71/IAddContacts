<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.lekai.root.iaddcontacts.ui.Splashscreen"
    tools:showIn="@layout/activity_splashscreen">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="IAdd \nContacts"
        android:textSize="100sp"
        android:textColor="@color/cardview_dark_background"
        android:layout_gravity="center_horizontal"
        android:paddingTop="20dp"
        android:fontFamily="casual"
        android:textStyle="italic|bold"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="479dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:fontFamily="sans-serif-condensed"
        android:paddingTop="100dp"
        android:textColor="@color/cardview_dark_background"
        android:text="This app helps you to add a \n\nlong list of contacts at once \n\n\n\n\nDev By\n\n@Oluwalekae "
        android:textSize="30sp"
        android:textStyle="italic|bold" />
</LinearLayout>
